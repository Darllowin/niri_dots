  "modules-left": ["niri/workspaces", "niri/window"],
  "modules-center": ["clock"],
  "modules-right": [
    "tray",
    "network",
    "memory",
    "cpu",
    "battery",
    "pulseaudio",
    "backlight",
    "niri/language",
  ],
  // Modules configuration
  "bluetooth": {
